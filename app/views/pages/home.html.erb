<!-- About Section -->
<section id="about" class="about-section text-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h1 class="text-white mb-4"><a href="/films">Films Showing</a></h1>
        <p class="text-white-50">
        <h2><a href="/films"></a></h2></a></p>
      </div>
    </div>
  </div>
</section>

<!-- Projects Section -->
<section id="projects" class="projects-section bg-light">
  <div class="container">

    <!-- Project One Row -->
  <% @auditoriums.each do |auditorium| %>
    <% if auditorium.id%2 == 1 %>
      <div class="row justify-content-center no-gutters mb-5 mb-lg-0">
        <div class="col-lg-6">
          <img class="img-fluid" src=" http://blackrockdigital.github.io/startbootstrap-grayscale/img/demo-image-01.jpg" alt="">
        </div>
        <div class="col-lg-6">
          <div class="bg-black text-center h-100 project">
            <div class="d-flex h-100">
              <div class="project-text w-100 my-auto text-center text-lg-left">
                <h2 class="text-white"><a href="/auditoriums/<%= auditorium.id %>">Auditorium <%= auditorium.id %></a></h2>
                <h4 class="text-white"><%= auditorium.film_playing %></h4>
                <p class="mb-0 text-white-50">
                  <% auditorium.showings.sort.each do |showing| %>
                    <%= link_to "#{showing.time.strftime("%I:%M %p")}", new_showing_order_url(:showing_id => showing.id) if showing.available?  %>
                  <% end %>
                <p>
                <hr class="d-none d-lg-block mb-0 ml-0">
              </div>
            </div>
          </div>
        </div>
      </div>
    <% else %>
    <!-- Project Two Row -->
      <div class="row justify-content-center no-gutters">
        <div class="col-lg-6">
          <img class="img-fluid" src=" http://blackrockdigital.github.io/startbootstrap-grayscale/img/demo-image-02.jpg" alt="">
        </div>
        <div class="col-lg-6 order-lg-first">
          <div class="bg-black text-center h-100 project">
            <div class="d-flex h-100">
              <div class="project-text w-100 my-auto text-center text-lg-right">
                <h2 class="text-white"><a href="/auditoriums/<%= auditorium.id %>">Auditorium <%= auditorium.id %></a></h2>
                <h4 class="text-white"><%= auditorium.film_playing %></h4>
                <p class="mb-0 text-white-50">
                  <% auditorium.showings.sort.each do |showing| %>
                    <%= link_to "#{showing.time.strftime("%I:%M %p")}", new_showing_order_url(:showing_id => showing.id) if showing.available?  %>
                    <%#= showing.status %>
                  <% end %>
                <p>
<!--                <p class="mb-0 text-white-50">Another example of a project with its respective description. These sections work well responsively as well, try this theme on a small screen!</p>-->
                <hr class="d-none d-lg-block mb-0 mr-0">
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>

  </div>
</section>

<!-- Signup Section -->
<section id="signup" class="signup-section">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-lg-8 mx-auto text-center">

        <i class="far fa-paper-plane fa-2x mb-2 text-white"></i>
        <h2 class="text-white mb-5">Subscribe to receive updates!</h2>

        <form class="form-inline d-flex">
          <input type="email" class="form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0" id="inputEmail" placeholder="Enter email address...">
          <button type="submit" class="btn btn-primary mx-auto">Subscribe</button>
        </form>

      </div>
    </div>
  </div>
</section>

