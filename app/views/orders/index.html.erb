<h1>All Orders</h1>
<h2>Total Orders: <%= @orders.count %></h2>
<div class="row">
  <% @films.each do |film| %>
    <div class="col-lg-12">
      <h2><%= film.name %>: <%= film.number_of_orders %> Orders</h2>
      <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Film</th>
            <th>Time</th>
            <th>Auditorium</th>
          </tr>
          </thead>
          <tbody>
          <% @orders.where(film_name: film.name ).each do |order| %>
            <tr>
              <td><%= order.first_name + " " + order.last_name %></td>
              <td><%= order.email %></td>
              <td><%= order.film_name %></td>
              <td><%= order.showing_time %></td>
              <td><%= order.auditorium_id %></td>
            </tr>
          <%end%>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
<h4><a href="/">Back to Home Page</a></h4>
